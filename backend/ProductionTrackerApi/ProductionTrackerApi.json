{
  "openapi": "3.0.4",
  "info": {
    "title": "Production Tracker API",
    "description": "An ASP.NET Core Web API for managing Production orders and tracking information",
    "version": "v1"
  },
  "paths": {
    "/ProductionOrder": {
      "get": {
        "tags": [
          "ProductionOrder"
        ],
        "summary": "Endpoint to get all production orders",
        "operationId": "GetProductionOrders",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ProductionOrder"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ProductionOrder"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ProductionOrder"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ProductionOrder": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Id of the production order",
            "nullable": true
          },
          "state": {
            "$ref": "#/components/schemas/ProductionOrderState"
          },
          "stepNames": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "A list with names of production process steps",
            "nullable": true
          },
          "startTimes": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "date-time"
            },
            "description": "A list with start times of all production process steps",
            "nullable": true
          },
          "endTimes": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "date-time"
            },
            "description": "A list with end times of all production process steps",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "A data transfer object for Production Orders"
      },
      "ProductionOrderState": {
        "enum": [
          "PENDING",
          "APPROVED",
          "COMPLETED"
        ],
        "type": "string",
        "description": "Enumeration to describe the discrete states of a production order"
      }
    }
  }
}